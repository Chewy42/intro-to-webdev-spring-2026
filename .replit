entrypoint = "index.html"
modules = ["web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Run Live Server"

[[workflows.workflow]]
name = "Run Live Server"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "live-server --port=80 --no-browser --entry-file=index.html"
waitForPort = 80

[[ports]]
localPort = 80
externalPort = 80

[deployment]
publicDir = "/"
deploymentTarget = "static"

[[deployment.responseHeaders]]
path = "/*.html"
name = "Cache-Control"
value = "no-cache, no-store, must-revalidate"

[[deployment.responseHeaders]]
path = "/*.{css,js}"
name = "Cache-Control"
value = "max-age=0, must-revalidate"

[agent]
expertMode = true
